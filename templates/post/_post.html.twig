<div class="mb-4">
    <div class="text-2xl">
        <a href="{{ path('app_post_show', { id: post.id }) }}">
            {{ post.title }}
        </a>
    </div>
    <div class="text-gray-500 dark:text-gray-400">{{ post.created | date("M j, Y") }}</div>
    <div class="flex">
        {% if summary %}
            <div class="mr-4">Likes <span class="px-2 rounded-md bg-gray-200 dark:bg-gray-700">{{ post.likedBy.count }}</span></div>
            <div>Comments <span class="px-2 rounded-md bg-gray-200 dark:bg-gray-700">{{ post.comments.count }}</span></div>
        {% endif %}
    </div>
    <div class="text-xl dark:text-gray-400">
        {% if summary %}
            {{ post.text | slice(0, 70) }} ... <br/>
            <a class="text-decoration-line: underline" href="{{ path('app_post_show', { id: post.id }) }}">Read more</a>
        {% else %}
            {{ post.text }}
        {% endif %}

    </div>

    <div class="text-sm text-gray-500 dark:text-gray-400"><a href="{{ path('app_profile', {id: post.author.id}) }}">{{ post.author.email }}</a></div>

    <div class="flex">
        {% if not summary %}
            {{ include('post/_like.html.twig', {post: post}) }}
            <div>|<a href="{{ path('app_post_comment', { id: post.id }) }}" class="mr-2 ml-2">Comment</a></div>
            <div>|<a href="{{ path('app_post_edit', { id: post.id }) }}" class="ml-2">Edit</a></div>
        {% endif %}
    </div>

</div>