<div class="mb-4">
    <div class="text-2xl">
        <a href="{{ path('app_post_show', { id: post.id }) }}">
            {{ post.title }}
        </a>
    </div>
    <div class="text-xl dark:text-gray-400">
        {% if summary %}
            {{ post.text | slice(0, 70) }} ... <br/>
            <a class="text-decoration-line: underline" href="{{ path('app_post_show', { id: post.id }) }}">Read more</a>
        {% else %}
            {{ post.text }}
        {% endif %}

    </div>
    <div class="text-gray-500 dark:text-gray-400">
        {{ post.created | date("M j, Y") }}
    </div>
    <div>
        <a href="#">Like <span class="px-2 rounded-md bg-gray-200 dark:bg-gray-700">0</span></a>
    </div>
    <div class="text-sm text-gray-500 dark:text-gray-400"><a href="#">user@email.com</a></div>
    {% if not summary %}
        <div><a href="{{ path('app_post_edit', { id: post.id }) }}">Edit post</a></div>
    {% endif %}
</div>